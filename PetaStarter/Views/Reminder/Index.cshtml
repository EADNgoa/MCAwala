@model PagedList.IPagedList<Reminder>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Reminders";
}

<center>
    <h2 class="section-to-print"><b>@ViewBag.Title</b></h2>
    
   
</center>

<p>
    @Html.ActionLink("Create New", "Manage")
</p>
<h4>Reminders</h4>
<table class="table">
    <tr>
        <th>
            Date
        </th>
       <th>
           Descrption
       </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>

        <td>
            @Html.ActionLink("Edit", "Manage", new { id = item.ReminderID})
        </td>
    </tr>
}

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
